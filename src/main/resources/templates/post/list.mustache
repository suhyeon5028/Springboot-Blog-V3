{{>/layout/post-header}}

<div class="container">

    <div class="d-flex justify-content-end my_mb_sm_1">

        <a href="/s/post/write-form" class="my_atag_none">
            <div class="my_icon_rounded_btn d-flex justify-content-center align-items-center">
                <i class="fa-solid fa-pencil"></i>
            </div>
        </a>
    </div>
    
    <div class="my_post_list">
        {{#postRespDto.posts.content}}
        <div class="my_post_list_item">
            <div class="my_post_list_item_left">
                {{#thumnail}}
                <img src="/upload/{{thumnail}} " width="100%" height="100%">
                {{/thumnail}}
                {{^thumnail}}
                <div class="my_fakeimg">Fake Image</div>
                {{/thumnail}}
            </div>
            <div class="my_post_list_item_right my_ellipse">
                <div class="my_text_title my_ellipse">{{title}}
                </div>
                <div class="my_text_body_sm">{{formatCreateDate}}</div>
                <div class="my_mt_md_1">
                    <a href="/user/{{user.id}}/post/{{id}}" class="my_success_btn">Read More</a>
                </div>
            </div>
        </div>
        {{/postRespDto.posts.content}}

        <div class="my_paging">

            <a href="/user/{{postRespDto.userId}}/post?page={{postRespDto.prev}}">이전</a>
            {{#postRespDto.pageNumbers}}
            <a href="/user/{{postRespDto.userId}}/post?page={{.}}">{{.}}</a>
            {{/postRespDto.pageNumbers}}
            <a href="/user/{{postRespDto.userId}}/post?page={{postRespDto.next}}">다음</a>

        </div>
    </div>

</div>

{{>/layout/footer}}